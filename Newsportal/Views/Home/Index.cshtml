                                <i class="fa fa-thin fa-star" data-index="@i"></i>
                            }
                        </div>
                    </div>
                    <a asp-controller="Home" asp-action="DetailsNews" asp-route-id="@secondFeatureNews.Id">Continue reading</a>
                </div>
                <img class="card-img-right flex-auto d-none d-lg-block" data-src="@secondFeatureNews.Image" alt="Thumbnail [200x250]" style="width: 200px; height: 250px;" src="@secondFeatureNews.Image" data-holder-rendered="true">
            </div>
        </div>
        <div class="col-md-6">
            <div class="card flex-md-row mb-4 shadow-sm ">
                <div class="card-body d-flex flex-column align-items-start">
