                        </div>
                    </div>
                    <a asp-controller="Home" asp-action="DetailsNews" asp-route-id="@thirdFeatureNews.Id">Continue reading</a>
                </div>
                <img class="card-img-right flex-auto d-none d-lg-block" data-src="holder.js/200x250?theme=thumb" alt="Thumbnail [200x250]" src="@thirdFeatureNews.Image" data-holder-rendered="true" style="width: 200px; height: 250px;">
            </div>
        </div>
    </div>
