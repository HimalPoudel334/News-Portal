                            }
                            <p id="totalLikes">@secondFeatureNews.TotalLikes</p> <button class="@cls">Likes</button>
                        </p>
                        <!--Comment section-->
                        <p class=" my-3">
                            @secondFeatureNews.Comments.Count Comments
                        </p>
                        <!--Rating section-->
                        <div class="align-content-center" style="color:yellow;">
                            Ratings 
                            @for (var i = 0; i < 5; i++)
